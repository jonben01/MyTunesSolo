CREATE TABLE Genre (
    Id INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
    GenreName NVARCHAR(255) NOT NULL
);
CREATE TABLE Playlist (
    Id INT NOT NULL IDENTITY (1,1) PRIMARY KEY,
    Name NVARCHAR(255) NOT NULL,
    SongCount INT DEFAULT 0
);
CREATE TABLE Song (
    Id INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
    Title NVARCHAR(255) NOT NULL,
    Artist NVARCHAR (255) NOT NULL,
    GenreId INT NULL FOREIGN KEY REFERENCES Genre(Id) ON DELETE SET NULL,
    Duration INT NOT NULL,
    File_Path NVARCHAR(255) NOT NULL,
);
CREATE TABLE PlaylistSongs (
    PlaylistSongId INT NOT NULL IDENTITY (1,1) PRIMARY KEY,
    SongId INT FOREIGN KEY REFERENCES Song(Id) ON DELETE CASCADE,
    PlaylistId INT FOREIGN KEY REFERENCES Playlist(Id) ON DELETE CASCADE,
    OrderIndex INT NOT NULL,
);
